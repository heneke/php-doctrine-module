{
    "name": "hhit/doctrine-module",
    "description": "Doctrine Module",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^5.6 || ^7.0",
        "doctrine/orm": "^2.5",
        "doctrine/migrations": "^1.4",
        "doctrine/data-fixtures": "^1.2.1",
        "nesbot/carbon": "^1.21.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "mockery/mockery": "^0.9.5"
    },
    "authors": [
        {
            "name": "Hendrik Heneke",
            "email": "heneke@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "HHIT\\Doctrine\\": "src/main/php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HHIT\\Doctrine\\": "src/test/php"
        }
    },
    "bin": [
        "bin/dc"
    ],
    "scripts": {
        "prepare-source": [
            "licenser run src mit --replace-existing --owners \"Hendrik Heneke\"",
            "php-cs-fixer fix"
        ]
    }
}
